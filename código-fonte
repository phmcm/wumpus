    if (x < 1 || x > 4)
        do
        {
            printf("\nOpcao invalida, digite outro valor:");
            scanf("%d", &x);
        } while (x < 1 || x > 4);
    switch (x)
    {
    case 1: // op√ß√£o de Jogar
        
        printf("\n");
        iniciar_tabuleiro();
        mostrar_tabuleiro();

        while (1)
        {  
            mover_agente();
            mover_monstro(&nova_linha, &nova_coluna);
            mostrar_tabuleiro();
            mensagem(&agente_linha, &agente_coluna);
            mensagem_campeao(mov);
            if (encontrou_ouro == 1)
            {
                printf("\nVoc√™ est√° com o ouro. FUJA!\n\n");
            }

            if (flecha == 1)
            {
                printf("\nVoc√™ tem uma Flecha. Use com responsabilidade!\n\n");
            }
        }
        break;
    case 2: // op√ß√£o de Debug
        printf("\n");
        iniciar_tabuleiro();
        mostrar_tabuleiroDEBUG();

        while (2)
        {
            mover_agente(); 
            mover_monstro(&nova_linha, &nova_coluna);
            mostrar_tabuleiroDEBUG();
            mensagem(&agente_linha, &agente_coluna);
            mensagem_campeao(mov);
             
             if (encontrou_ouro == 1)
            {
                printf("\nVoc√™ est√° com o ouro. FUJA!");
            }

            if (flecha == 1)
            {
                printf("\n\nVoc√™ tem uma Flecha. Use com responsabilidade!");
            }

        }
        break;
    case 3: // op√ß√£o Ranking
        return 0;
        break;
    case 4:
        printf("\n");
        return 0; // fecha o Jogo
        break;
    }
    return 0;
}

